<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar"/>

        <Spinner
            android:id="@+id/RoomMeeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="20dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/Date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/date"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:padding="20dp"/>

            <Button
                android:id="@+id/select_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:text="@string/selectionnez_une_date" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Hour"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:padding="20dp"
                    android:text="@string/heure"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/select_hour"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:padding="20dp"
                    android:text="@string/selectionnez_une_heure" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Input"
                android:hint="@string/entrer_le_mail_des_particpants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="20dp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/Participant"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:theme="@style/Theme.MaterialComponents"
                style="@style/Widget.MaterialComponents.Chip.Entry"
                android:layout_marginTop="20dp"
                android:padding="10dp">

            </com.google.android.material.chip.ChipGroup>


            <Button
                android:id="@+id/Btn_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/ajouter"
                android:layout_marginTop="20dp"
                android:padding="20dp"/>


        <EditText
            android:id="@+id/Subject"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="sujet"
            android:inputType="text"
            android:layout_marginTop="20dp"
            android:padding="20dp"/>

        <Button
            android:id="@+id/Create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="CREER"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:padding="20dp"/>



        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>